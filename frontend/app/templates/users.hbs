<h4>This is the users page</h4>
{{#link-to "/"}}Home{{/link-to}}

<div>
  {{#each model as |user|}}
    <article class="name">
      <h3>{{user.name}}</h3>
      <div class="color">
        <span>Favorite Color:</span> {{user.favoriteColor}}
      </div>
      <div class="connections">
        <h4>Friends:</h4>
        <ul class="list-group-item">
        {{#each user.connections as |connection|}}
            <li>
              {{#if (equality-checker user.id connection.big.id)}}
                {{connection.small.name}}
              {{else}}
                {{connection.big.name}}
              {{/if}}
            </li>
        {{/each}}
        </ul>
      </div>
    </article>
  {{/each}}
</div>
